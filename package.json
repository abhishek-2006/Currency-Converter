{
  "name": "currency-converter-pro",
  "version": "2.0.0",
  "description": "A professional, feature-rich currency converter with real-time exchange rates, advanced analytics, and modern glassmorphism design",
  "main": "index.html",
  "homepage": "https://abhishek-2006.github.io/Currency-Converter/",
  "repository": {
    "type": "git",
    "url": "https://github.com/abhishek-2006/Currency-Converter.git"
  },
  "bugs": {
    "url": "https://github.com/abhishek-2006/Currency-Converter/issues"
  },
  "author": {
    "name": "Abhishek Shah",
    "email": "shahabhishek051@gmail.com",
    "url": "https://github.com/abhishek-2006"
  },
  "license": "MIT",
  "keywords": [
    "currency",
    "converter",
    "exchange-rate",
    "finance",
    "money",
    "banking",
    "pwa",
    "glassmorphism",
    "javascript",
    "html5",
    "css3",
    "web-app",
    "progressive-web-app"
  ],
  "scripts": {
    "start": "python -m http.server 8000",
    "serve": "npx http-server -p 8000",
    "build": "echo 'No build process required for static site'",
    "deploy": "echo 'Deploy to GitHub Pages or your preferred hosting'",
    "lint": "eslint script.js",
    "lint:fix": "eslint script.js --fix",
    "format": "prettier --write *.html *.css *.js",
    "test": "echo 'Run manual tests in browser'",
    "validate": "html-validate index.html",
    "compress": "gzip -k index.html style.css script.js",
    "stats": "wc -l *.html *.css *.js",
    "clean": "rm -rf node_modules/ package-lock.json"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-config-standard": "^17.1.0",
    "html-validator": "^7.1.0",
    "http-server": "^14.1.1",
    "prettier": "^3.2.5",
    "stylelint": "^16.2.1",
    "stylelint-config-standard": "^36.0.0"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie <= 11"
  ],
  "files": [
    "index.html",
    "style.css",
    "script.js",
    "manifest.json",
    "sw.js",
    "LICENSE",
    "README.md",
    "assets/"
  ],
